<body id="login">
    @*<div class="box-header">*@

    @*  </div>*@ <!-- /.box-header -->
    <!-- form start -->
    @using (Html.BeginForm("Create", "semiadmin", FormMethod.Post, new { @class = "form-group" }))
    {
        <div class="container">
            @ViewBag.UserId
            <div class="form-signin">

                <button id="btn1" class=" btn-xs btn btn-primary disabled">User Information</button>
                <div class="form-group">
                    <label for="exampleInputPassword1">Edited First Name</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.User_F_Name)" disabled="" required="required">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">First Name</label>
                    <input class="form-control" id="exampleInputPassword1" placeholder="First Name" name="First_Name" type="text" onkeypress="return AllowAlphabet(event)" required="required">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Edited Last Name</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.User_L_Name)" disabled="" required="required">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Last Name</label>
                    <input class="form-control" id="exampleInputPassword1" placeholder="Last Name" name="Last_Name" type="text" onkeypress="return AllowAlphabet(event)" required="required">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Edited CNIC</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.User_CNIC)" disabled="" required="required">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">CNIC: <span style="color:grey">(optional)</span></label>
                    <input class="form-control" id="exampleInputPassword1" placeholder="CNIC" name="CNIC" type="text" onkeypress="return isNumberKey(event)" maxlength="13">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Edited Email</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.User_Email)" disabled="" required="required">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input class="form-control" id="exampleInputEmail1" name="Email" placeholder="abc@gmail.com" type="email" required="required">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Edited Phone NO#</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.User_Phone_)" disabled="" required="required">
                </div>
                <label for="exampleInputPassword1">Phone No#</label>
                <input type="text" id="txtPhoneNo" placeholder="Phone No# " name="phoneno" class="form-control" required="required" onkeypress="return isNumberKey(event)" maxlength="11" />
                <div class="form-group">
                    <label>Edited Postal Address </label>
                    <textarea class="form-control" rows="3" value="@Html.DisplayFor(model => model.User_Address)" disabled="" required="required"></textarea>
                </div>

                <div class="form-group">
                    <label>Postal Address </label>
                    <textarea class="form-control" rows="3" id="comment" name="Address" placeholder="Enter Your Address  Here ....." required="required"></textarea>
                </div>

                <div class="box-footer">

                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div><!-- /.box-body -->


    }
</body>

<script>
    ///////////////////allowing only numbers

    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode != 46 && charCode > 31
        && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }

    ///////////////////allowing only alphabets
    function AllowAlphabet(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if ((charCode > 64 && charCode < 91))
            return true;
        else if ((charCode > 96 && charCode < 123))
            return true;
        else if ((charCode == 32))
            return true
        else
            return false;
    }
    ///////////////////validation for phone number and cnic
    function ValidateNo() {
        var phoneNo = document.getElementById('txtPhoneNo');

        if (phoneNo.value == "" || phoneNo.value == null) {
            alert("Please enter your Mobile No.");
            return false;
        }
        if (phoneNo.value.length < 10 || phoneNo.value.length > 10) {
            alert("Mobile No. is not valid, Please Enter 10 Digit Mobile No.");
            return false;
        }

        alert("Success ");
        return true;
    }

</script>
